struct VertexIn {
    position: float3;
}

struct FragmentIn {
    position: float4;
}

#[vertex]
fun pos(input: VertexIn): FragmentIn {
    var output: FragmentIn;
    output.position.xyz = input.position.xyz;
    output.position.z = 1.0;
    output.position.w = 1.0;
    return output;
}

#[fragment]
fun pixel(input: FragmentIn): float4 {
    var color: float4;
    color.r = 1.0;
    return color;
}

#[pipe]
struct Pipe {
    vertex_shader = pos;
    fragment_shader = pixel;
}

