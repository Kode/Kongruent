struct VertexIn {
    position: float3;
}

struct FragmentIn {
    position: float4;
}

#[vertex]
fun pos(input: VertexIn): FragmentIn {
    var output: FragmentIn;
    output.position.x = input.position.x;
    output.position.y = input.position.y;
    output.position.z = 0.5;
    output.position.w = 1.0;
    return output;
}

#[fragment]
fun pixel(input: FragmentIn): float4 {
    var color: float4;
    color.r = 1.0;
    color.g = 0.0;
    color.b = 0.0;
    color.a = 1.0;
    return color;
}

#[pipe]
struct Pipe {
    vertex = pos;
    fragment = pixel;
}

